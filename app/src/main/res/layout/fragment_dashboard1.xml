


<LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"

    >
        <RelativeLayout
                android:id="@+id/headerMenu"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"

        >



            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"

                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
            />

            <ImageView
                    android:id="@+id/logout"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"

                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
            />

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"

                    android:layout_toLeftOf="@+id/logout"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"

            />
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/infoHeader"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
        >
            <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"

                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
            />
            <TextView
                    android:id="@+id/welcomeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome!"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_toRightOf="@+id/avatar"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"

            />
            <TextView
                    android:id="@+id/cardName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/welcomeTxt"
                    android:text="Muhammad Ali Ansari"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/avatar"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
            />
            <TextView
                    android:id="@+id/lastLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Login: 12/08/2019 09:00a.m."
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:layout_toRightOf="@+id/avatar"
                    android:layout_below="@+id/cardName"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginLeft="10dp"
            />
        </RelativeLayout>

        <TextView
                android:id="@+id/availableBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7,345"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textStyle="bold"
                android:layout_above="@+id/availableBalanceTxt"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"

        />
        <TextView
                android:id="@+id/cardLimitType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PKR"
                android:layout_toRightOf="@+id/availableBalance"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/white"
                android:gravity="left|bottom"
                android:layout_above="@+id/availableBalanceTxt"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="6dp"



        />
        <TextView
                android:id="@+id/availableBalanceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Balance"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"

        />



        <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/infoHeader"
                android:elevation="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:clipToPadding="false"
                android:translationY="2dp"
                android:translationZ="2dp"
                android:translationX="2dp"
                android:gravity="bottom"
        >
            <TextView
                    android:id="@+id/points"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:textColor="@color/white"
                    android:text="12,0000"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textStyle="bold"
                    android:gravity="center"


            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"

                    android:textColor="#303030"
                    android:text="Your Loyalty Points"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            />

        </LinearLayout>
    </RelativeLayout>



    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="@color/bottom_grey"
            android:elevation="5dp"
            android:paddingLeft="15dp"
            android:paddingTop="20dp"
            android:paddingRight="15dp">
        <RelativeLayout
                android:id="@+id/consumptionsDetailsContainer"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:clipToPadding="false"
                android:translationZ="2dp"
                android:translationY="2dp"
                android:translationX="2dp"

        >
            <LinearLayout
                    android:id="@+id/detailOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_alignParentTop="true"
            >
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="horizontal"
                        android:weightSum="1"
                >
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Limit Type"
                            android:textSize="12sp"
                    />
                    <TextView
                            android:id="@+id/limitType"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Amount"
                            android:textStyle="bold"
                            android:textColor="@color/font_color_two"
                            android:textSize="12sp"

                    />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="horizontal"
                        android:weightSum="1"
                >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monthly Limit"
                            android:textSize="12sp"
                    />
                    <TextView
                            android:id="@+id/monthlyLimit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="16,0000PKR"
                            android:textSize="12sp"
                            android:textColor="@color/font_color_two"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:paddingLeft="7dp"
                            android:singleLine="true"
                    />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:id="@+id/detailTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_below="@+id/detailOne"
            >
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="horizontal"
                        android:weightSum="1"
                >
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Card Status"
                            android:textSize="12sp"
                    />
                    <TextView
                            android:id="@+id/cardStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Active"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/font_color_two"
                    />
                </LinearLayout>


            </LinearLayout>

            <TextView
                    android:id="@+id/lastFuelLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Fuel Consumption Details"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
            />

            <LinearLayout
                    android:id="@+id/bottomDetailContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginBottom="15dp"
                    android:layout_below="@+id/lastFuelLabel"
            >
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.30"
                        android:orientation="horizontal"
                >
                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:layout_gravity="bottom"
                    />
                    <TextView
                            android:id="@+id/lastTransactionBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="550 PKR"
                            android:textSize="12sp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="bottom"
                            android:textStyle="bold"
                            android:textColor="@color/black"

                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.35"
                        android:orientation="horizontal"
                >
                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:layout_gravity="bottom"
                    />
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="bottom|center_vertical"
                    >
                        <TextView
                                android:id="@+id/merchantName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="12sp"
                                android:layout_marginLeft="5dp"
                                android:singleLine="true"
                                android:textStyle="bold"

                                android:textColor="@color/black"

                        />
                        <TextView
                                android:id="@+id/merchantLocator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_marginLeft="5dp"
                                android:textSize="10sp"

                        />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33"
                        android:orientation="horizontal"
                >
                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:layout_gravity="bottom"
                    />
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                    >
                        <TextView
                                android:id="@+id/lastTransactionTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="12sp"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center_vertical"
                                android:textStyle="bold"
                                android:textColor="@color/black"

                        />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>





        <TextView
                android:id="@+id/powerBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="POWERED BY"
                android:textColor="@color/black"
                android:textSize="7sp"

        />



    </RelativeLayout>



</LinearLayout>
